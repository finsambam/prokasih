<%= render :partial => 'shared/error_without_params' %>

<div class="header-content">
  <h2 class="page-header">Peta Lokasi Pengujian</h2>
</div>
<div class="col-md-12">
  <div class="col-md-10">
    <%= form_tag(results_get_all_location_path(format: :js), method: 'get', remote: true, class: 'form-inline', id: 'filter') do %>
      <fieldset>
        <div class="form-group">
          <%= select_tag 'river_name', options_for_select(@rivers), prompt: "Pilih sungai", class: 'form-control'%>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="col-md-2">
    <% if current_user.present? %>
      <%= link_to 'Unduh(PDF)', results_save_map_image_as_pdf_path(:format => :pdf), :class => "btn btn-success disabled", id: "download-map-pdf", target: :_blank, disabled: true%>
    <% else %>
      <button type="button" class="btn btn-success disabled" data-toggle="modal" data-target="#download-confirmation-modal" id="download-map-pdf" disabled>Unduh(PDF)</button>
    <% end %>
  </div>
</div>
<div class="col-md-12" id="result-container">
  <table id="empty-result" class="table table-striped table-bordered">
    <tr>
      <td>Data tidak ditemukan</td>
    </tr>
  </table>
</div>

<%= render :partial => 'download_confirmation' %>

<script type="text/javascript">
  $( document ).on('turbolinks:load', function() {
    $("#river_name").change(function(){
      $('#filter').trigger('submit');
    })
  });

</script>