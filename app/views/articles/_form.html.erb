<%= form_for(@article, html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group required">
    <%= f.label :title, "Judul", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group required">
    <%= f.label :content, "Konten", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :content, class: "wysiwyg-editor form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, "Foto", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= link_to "<i class='fa fa-reply'></i> Batal".html_safe, { controller: "articles", action: "list" }, class: "btn btn-default" %>
      <%= button_tag(type: "submit", class: "btn btn-success") do %>
        <i class="fa fa-floppy-o"></i> Simpan
      <% end %>
    </div>
  </div>
 
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysiwyg-editor').each(function(i, elem) {
      $(elem).wysihtml5({
        useLineBreaks: false,
        toolbar:{
          "image": false,
          "font-styles": false,
          "emphasis": true,
          "lists": true,
          "html": false,
          "link": false  
        } 
      });
    });

  })
</script>