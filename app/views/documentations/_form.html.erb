<%= form_for(@documentation, html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group required">
    <%= f.label :title, "Judul", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Deskripsi", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group required">
    <%= f.label :image, "Foto", class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-8">
      <%= link_to "<i class='fa fa-reply'></i> Batal".html_safe, { controller: "documentations", action: "list" }, class: "btn btn-default" %>
      <%= button_tag(type: "submit", class: "btn btn-success") do %>
        <i class="fa fa-floppy-o"></i> Simpan
      <% end %>
    </div>
  </div>
 
<% end %>